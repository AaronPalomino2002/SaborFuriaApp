<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="87dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imgCarrito2"
            android:layout_width="47dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="23sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:background="@drawable/style_borde_items" />

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="26sp">

            <TextView
                android:id="@+id/txtProducItem"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Producto"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtPrec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="126dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="35sp">

            <ImageView
                android:id="@+id/imgMenos"
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/botonmenos"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="34dp"
                android:layout_height="25sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1" />

            <ImageView
                android:id="@+id/imgMas"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/botonmas"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                app:srcCompat="@drawable/tacho"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>