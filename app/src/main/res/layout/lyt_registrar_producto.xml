<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#E2CA72"
            android:fontFamily="sans-serif-condensed-medium"
            android:paddingLeft="15sp"
            android:paddingTop="7sp"
            android:text="Registrar Producto"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="294dp"
            android:layout_height="465dp"
            android:layout_gravity="center"
            android:layout_marginTop="60sp"
            android:background="@drawable/style_borde"
            android:orientation="vertical"
            android:paddingLeft="20sp"
            android:paddingTop="30sp"
            android:paddingRight="20sp">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Tipo Producto:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spTipoProducto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Nombre producto:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNomProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10sp"
                android:text="Cantidad:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spCantProducto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="Precio:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPrecioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="DescripciÃ³n:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDescriProducto"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:ems="10"
                android:inputType="text"
                android:text=""
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:layout_marginTop="30sp">

            <Button
                android:id="@+id/btnRegresarMenuAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:backgroundTint="#F65600"
                android:onClick="regresarMenu1"
                android:text="Menu" />

            <Button
                android:id="@+id/btnRegistrarPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:backgroundTint="#F65600"
                android:onClick="registrarProducto"
                android:text="Registrar" />

            <Button
                android:id="@+id/btnListaPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:backgroundTint="#F65600"
                android:onClick="listarProductos"
                android:text="Lista" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>