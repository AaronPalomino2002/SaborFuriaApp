<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen del carrito de compras -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvPromociones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promociones"
                    android:textSize="18sp"
                    android:padding="24dp"
                    android:paddingStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="8dp" /> <!-- Margen inferior para separar del RecyclerView -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tvPromociones"
                    android:background="#000000" /> <!-- Línea de separación -->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPromociones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPromociones"
                    android:layout_marginTop="8dp" /> <!-- Margen superior para separar del TextView -->

                <ImageView
                    android:id="@+id/imgCarrito"
                    android:layout_width="74dp"
                    android:layout_height="69dp"
                    android:src="@drawable/baseline_shopping_bag_24"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="1dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />

            <!-- TextView para Hamburguesa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hamburguesa"
                android:textSize="18sp"
                android:padding="8dp" />

            <!-- RecyclerView para Hamburguesa -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHamburguesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />

            <!-- TextView para Bebidas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bebidas"
                android:textSize="18sp"
                android:padding="8dp" />

            <!-- RecyclerView para Bebidas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBebidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- TextView para Helados -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Helados"
                android:textSize="18sp"
                android:padding="8dp" />

            <!-- RecyclerView para Helados -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHelados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </FrameLayout>
</ScrollView>
