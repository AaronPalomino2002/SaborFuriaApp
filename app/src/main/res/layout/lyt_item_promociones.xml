<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    android:background="@drawable/border_background">

    <ImageView
        android:id="@+id/imgPro"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_marginBottom="41dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAgregarCarrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAgregarCarrito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"></androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/txtNomPromItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combo de tres"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgPro"
        app:layout_constraintTop_toBottomOf="@+id/imgPro" />

    <TextView
        android:id="@+id/txtPreRealItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imgPro"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNomPromItem" />

    <TextView
        android:id="@+id/txtPrePromoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 5.90"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imgPro"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toEndOf="@+id/txtPreRealItem"
        app:layout_constraintTop_toBottomOf="@+id/txtNomPromItem" />

    <Button
        android:id="@+id/btnAgregarCarrito"
        android:layout_width="152dp"
        android:layout_height="39dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#CA6666"
        android:text="AÃ±adir al carrito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
        app:layout_constraintTop_toBottomOf="@+id/imgPro"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>
